<div class="row">
  <h2 class="bg-light">直近一週間の売上推移</h2>
</div>
<div class="row">
  <div class="col-md-12">
    <canvas id="myChart" width="400" height="150"></canvas>
    <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '前日', '当日'],
            datasets: [{
                label: '売上高(円)',
                data: <%= @sales_array %> ,
                borderWidth: 2,
                backgroundColor:['rgba(100, 159, 64, 0.0)'],
                borderColor: 'blue',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>
  </div>
</div>

<div class="row">
  <h2 class="mt-5 mb-3 bg-light">
    注文履歴一覧
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="row pb-2">
      <dib class="offset-md-9">
        <%= form_with model: @order_inffos, url: admin_order_infos_sales_status_path, method: :get, local: true do |f| %>
          <%= f.select :sortword, [['入金待ち', 0], ['入金確認', 1], ['制作中', 2], ['発送準備中', 3], ['発送済み', 4]] %>
          <%= f.submit 'ステータスで絞る' %>
        <% end %>
      </dib>
    </div>
    
    <%= paginate @order_infos %>
    <table class="table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_infos.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_info_path(order) %></td>
          <td><%=  (order.customer.family_name + order.customer.given_name) %></td>
          <td><%= order.order_products.sum(:quantity) %></td>
          <td><%= order_status_hash[:"#{order.order_status}"] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>