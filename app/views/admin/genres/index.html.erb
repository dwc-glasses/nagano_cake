<div class="container px-5">
  <div class="row">
    <div class="col-md-6 ">
      <%= form_with model: @genre, local: true do |f| %>
        <%= f.label :ジャンル名, class: "col-md-1"  %>
        <%= f.text_field :name, class: "col-md-1 offset-md-1" %>
        <%= f.submit "新規登録", class: "col-md-1 offset-md-1 btn btn-success btn-sm"%>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="table-sm">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @grenres.each do |genre| %>
          <tr>
            <td><% genre.name %></td>
            <td><% link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
          </tr>
        </tbody>
      </div>
    </div>
  </div>
</div>