<div class="container">
  <%= render 'layouts/error', model: @genre %>
  <h2 class="pt-5">ジャンル一覧・追加</h2>
  <div class="row py-4">
    <div class="col-8">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :ジャンル名  %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success"%>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>