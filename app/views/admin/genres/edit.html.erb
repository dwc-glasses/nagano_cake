<div class="container px-5">
  <div class="row">
    <h2>ジャンル編集</h2>
    <div class="col-md-6 ">
      <%= form_with model: @genre, local: true do |f| %>
        <%= f.label :ジャンル名, class: "col-md-1"  %>
        <%= f.text_field :name, class: "col-md-1 offset-md-1" %>
        <%= f.submit "変更を保存", class: "col-md-1 offset-md-1 btn btn-success btn-sm"%>
      <% end %>
    </div>
  </div>
</div>