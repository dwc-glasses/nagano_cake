<div class="row">
  <div class="col-md-12">
    <h2 class="m-3">
      会員一覧
    </h2>
    <%= paginate @customers %>
    <table class="table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= link_to (c.family_name + c.given_name), admin_customer_path(c) %></td>
          <td><%= c.email %></td>
          <% if c.suspended %>
            <td class="text-secondary">退会</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>