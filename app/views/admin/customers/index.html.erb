<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |c| %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.name %></td>
            <td><%= c.email %></td>
            <td>
              <% if c.suspended %>
                <td>退会</td>
              <% else %>
                <td>有効</td>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>