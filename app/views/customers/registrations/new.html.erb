<div class="new-registration">
  <div class="row">
    <div class="col-md-4 offset-md-1 pt-5">
      <div class="new-customer-registration h3">
        新規会員登録
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <!--名前（漢字）-->
　<div class="row pt-4">
    <p class="col-md-2 text-left">名前</p>
    <div class="col-md-1 d-flex align-items-center justify-content-end p-0">
      <%= f.label :family_name, '（姓）', {class:"mb-0"} %>
    </div>
    <div class="col-md-2 d-flex align-items-center">
      <%= f.text_field :family_name, autofocus: true, placeholder: '長野' %>
    </div>
    <div class="col-md-1 d-flex align-items-center justify-content-end p-0">
      <%= f.label :given_name,'（名）', {class:"mb-0"} %>
    </div>
    <div class="col-md-2 d-flex align-items-center">
      <%= f.text_field :given_name, autofocus: true, placeholder: '恵子' %>
    </div>
　</div>

　<!--名前（カナ）-->
　<div class="row">
    <p class="col-md-2 text-left">フリガナ</p>
    <div class="col-md-1 d-flex align-items-center justify-content-end p-0">
      <%= f.label :family_name_kana,'（セイ）', {class:"mb-0"} %>
    </div>
    <div class="col-md-2 d-flex align-items-center">
      <%= f.text_field :family_name_kana, autofocus: true, placeholder: 'ナガノ' %>
    </div>
    <div class="col-md-1 d-flex align-items-center justify-content-end p-0">
      <%= f.label :given_name_kana,'（メイ）', {class:"mb-0"} %>
    </div>
    <div class="col-md-2 d-flex align-items-center">
      <%= f.text_field :given_name_kana, autofocus: true, placeholder: 'ケイコ' %>
    </div>
　</div>

　<!--メールアドレス-->
　<div class="row">
    <p class="col-md-3 text-left">メールアドレス</p>
    <div class="form_group col-md-3 text-left">
      <%= f.email_field :email, autofocus: true, placeholder: 'sample@example.com' %>
    </div>
  </div>

　<!--郵便番号-->
　<div class="row">
    <p class="col-3">郵便番号(ハイフンなし)</p>
    <div class="from_group col-md-3 text-left">
      <%= f.text_field :postal_code, autofocus: true, placeholder: '3800851' %>
    </div>
  </div>

　<!--住所-->
　<div class="row">
    <p class="col-md-3 text-left">住所</p>
    <div class="from_group col-md-3 text-left">
      <%= f.text_field :address, autofocus: true, size: 56, placeholder: '長野県長野市元善町491' %>
    </div>
　</div>
　<!--電話番号-->
　<div class="row">
    <p class="col-md-3 text-left">電話番号(ハイフンなし)</p>
    <div class="from_group col-md-3 text-left">
      <%= f.telephone_field :phone, autofocus: true, placeholder: '0262343591' %>
    </div>
　</div>

　<!--パスワード-->
　<div class="row">
    <p class="col-md-3 text-left">パスワード(6文字以上)</p>
    <div class="form_group col-md-3 text-left">
     <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <!--パスワード（確認）-->
　<div class="row">
    <p class="col-md-3 text-left">パスワード(確認用)</p>
    <div class="form_group col-md-3 text-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
　</div>

  <!--登録ボタン-->
  <div class="row">
    <div class="col-md-3"></div>
    <div class="actions col-md-3 text-center pt-2 pb-5">
    <%= f.submit "新規登録", class: "btn btn-success btn-md" %>
  </div>
    <% end %>
  </div>
<!--登録済みの人用のログイン-->
  <div class="row">
    <div class="col-4 offset-1 pt-3 ">
      <div class="new-session h3">
        既に登録済みの方
      </div>
    </div>
  </div>
  <div class="row pt-3">
    <p class="col-md-4 offset-md-1 pb-5">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </p>
  </div>
</div>
