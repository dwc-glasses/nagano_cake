<% if @datas.empty? %>
  <h2>該当する商品はありません。</h2>
<% end %>
<% unless @value.to_i == 0 %>
  <h2 class="mb-3">検索ジャンル名 "<%= @searched_value %>"　(全<%= @datas.count %>件)</h2>
<% else %>
  <h2 class="mb-3">検索ワード "<%= @searched_value %>"　(全<%= @datas.count %>件)</h2>
<% end %>
<div class="row product-index">
  <% @datas.each do |product| %>
    <div class="col-3">
      <!--商品画像-->
      <div class="mb-2">
        <%= link_to public_product_path(product.id) do %>
          <%= attachment_image_tag product, :image, format: 'jpeg', size: '250x200' %>
        <% end %>
      </div>
      <!--商品情報-->
      <div class="mb-2">
        <%= product.name %>
      </div>
      <div class="mb-2">
      ¥<%= product.tax_price %></br>
      </div>
    </div>
  <% end %>
</div>
