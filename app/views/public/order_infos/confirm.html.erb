  <div class="row">
    <div class="col-md-2 offset-md-2">
      <h4 class="">注文情報確認</h4>
    </div>
  </div>
  <%= form_with model: @order_info, url: public_order_infos_confirm_path, method: :get, local: true do |f| %>
  <div class="row ml-5 mt-3">
    <div class="col-md-3">
      <h4>支払方法</h4>
      <div class="ml-5">
        <%= f.radio_button :payment_method, 0 %>
        <%= f.label :payment_method, 'クレジットカード' %>
      </div>
      <div class="ml-5">
        <%= f.radio_button :payment_method, 1 %>
        <%= f.label :payment_method, '銀行振込'%>
      </div>
    </div>
  </div>

  <div class="row ml-5 mt-3">
    <div class="col-md-3">
      <h4>お届け先</h4>
      <div class="ml-5">
        <%= f.radio_button :address, current_customer.address %>
        <%= f.label :postal_code, 'ご自身の住所',{class: "m-0"} %>
        <%= f.hidden_field :postal_code, :value => current_customer.postal_code %>
        <%= f.hidden_field :name, :value => current_customer.family_name + current_customer.given_name %>
        <div class="ml-4">
          〒<%= current_customer.postal_code + current_customer.address %><br>
          <%= current_customer.family_name + current_customer.given_name %>
        </div>
      </div>
      <!--実装方法分からないので保留-->
      <div class="ml-5">
        <%= f.radio_button :address, :address %>
        <%= f.label :address, '登録済住所から選択' %>
        <div class="ml-4">
          <%= f.collection_select :address, @customer_addresses, :address, :address, {} %>
        </div>
      </div>
      <!--実装方法分からないので保留-->
      <div class="ml-5">
        新しい住所
      </div>
      <div class="row">
        <div class="col-md-2 offset-md-3">
          <%= f.submit '確認画面へ進む',{class: "btn btn-primary"} %>
        </div>
      </div>
    </div>
  </div>
 <% end %>
