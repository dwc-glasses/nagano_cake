<h2 class="mt-5 mb-3">新着商品</h2>
<div class="row">
  <% count = 0 %>
  <% @products.each do |product| %>
    <div class="col-3">
      <!--商品画像-->
      <div class="mb-2 product">
        <%= link_to public_product_path(product.id) do %>
          <%= attachment_image_tag product, :image, format: 'jpeg', size: '250x200', alt:"image#{product.id}" %>
        <% end %>
      </div>
      <!--商品情報-->
      <div class="mb-2">
        <%= product.name %>
      </div>
      <div class="mb-2">
      ¥<%= product.tax_price %></br>
      </div>
    </div>

    <% count += 1
     if count == 4
       break
     end
    %>

    <% end %>
</div>
</div>


