<h2>商品一覧</h2>

<table class="table">
  <tr>
      <th></th> <th>商品名</th> <th>商品説明</th> <th>ジャンル</th> <th>価格(税込)</th> <th></th>
  </tr>
  
  <% @products.each do |product| %>
    <tr>
      <td>image</td>
      <td><%= link_to product.name, public_product_path(product.id) %></td>
      <td><%= product.introduction %></td>
      <td><%= product.genre_id %></td>
      <td><%= product.tax_price %></td>
      <td><%= product.status %></td>
    </tr>
  <% end %>
  
</table>