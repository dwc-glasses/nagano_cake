<h2 class="mb-3">商品一覧(全<%= products.count %>件)</h2>
<div class="row product-index">
  <% products.each do |product| %>
    <div class="col-3">
      <!--商品画像-->
      <div class="mb-2">
        <%= link_to public_product_path(product.id) do %>
          <%= attachment_image_tag product, :image, format: 'jpeg', size: '250x200' %>
        <% end %>
      </div>
      <!--商品情報-->
      <div class="mb-2">
        <%= product.name %>
      </div>
      <div class="mb-2">
      ¥<%= product.tax_price %></br>
      </div>
    </div>
  <% end %>
</div>